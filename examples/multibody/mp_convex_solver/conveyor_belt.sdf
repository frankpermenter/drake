<?xml version="1.0"?>
<sdf version="1.6">
  <model name="PushBox">
    <!-- Box of mass m = 1.0 Kg. -->
    <link name="box">
      <pose>0 0 0.05 0 0 0</pose>
      <inertial>        
        <mass>1.0</mass>
        <!-- Inertia values irrelevant for this test since this body can
             only move in the x and y directions.
        -->
        <inertia>
          <ixx>1.0e40</ixx>
          <iyy>1.0e40</iyy>
          <izz>1.0e40</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <!--  Box of 10 cm in size. -->        
      <visual name="visual">
        <pose>0.0 0.0 0.0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>            
        </geometry>
        <material>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
      
      <collision name="collision">
        <pose>0.0 0.0 -0.05 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.0</radius>
          </sphere>
        </geometry>  
        <drake:proximity_properties>
          <drake:point_contact_stiffness>
          1.0e5</drake:point_contact_stiffness>
          <drake:hunt_crossley_dissipation>0.05
          </drake:hunt_crossley_dissipation>
          <drake:mu_dynamic>0.5</drake:mu_dynamic>
          <drake:mu_static>0.5</drake:mu_static>
        </drake:proximity_properties>
      </collision>                  
    </link>        

    <link name="ground">
      <inertial>  
        <!-- Very heavy ground so that its inertia keeps initial velocity close
        to constant -->
        <mass>1.0e10</mass>
        <!-- Inertia values irrelevant for this test since this body can
             only move in the x direction.
        -->
        <inertia>
          <ixx>1.0e40</ixx>
          <iyy>1.0e40</iyy>
          <izz>1.0e40</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="ground_collision">
        <geometry>
          <plane>
            <normal>0 0 1</normal>
            <size>100 100</size>
          </plane>
        </geometry>
        <drake:proximity_properties>
          <drake:point_contact_stiffness>
          1.0e16</drake:point_contact_stiffness>
          <drake:hunt_crossley_dissipation>0.0
          </drake:hunt_crossley_dissipation>
          <drake:mu_dynamic>0.5</drake:mu_dynamic>
          <drake:mu_static>0.5</drake:mu_static>
        </drake:proximity_properties>
      </collision> 

      <visual name="ground_visual">
        <geometry>
          <plane>
            <normal>0 0 1</normal>
            <size>100 100</size>
          </plane>
        </geometry>
        <material>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual> 
    </link>

    <joint name="z_slider" type="prismatic">
      <parent>world</parent>
      <child>box</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>          
          <effort>0</effort>
        </limit>
      </axis>
    </joint>

    <joint name="belt_slider" type="prismatic">
      <parent>world</parent>
      <child>ground</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>          
          <effort>0</effort>
        </limit>
      </axis>
    </joint>
  </model>
</sdf>

